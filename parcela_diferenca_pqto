SELECT
    F.ID, F.NOME_EMPRESA, F.NOTAFISCAL, F.DATA_EMIS, F.DATA_VENC, F.DATA_PAGTO,    F.STATUS,F.VALOR, F.VALOR_PAGO,
   CASE
        WHEN F.STATUS = 'PG' THEN(F.VALOR_PAGO - F.VALOR)
        ELSE  0 END AS DIFERENCA,
 
    (F.DATA_PAGTO - F.DATA_VENC) AS ATRASO,F.BOLETOIMPRESSO, F.CONTACORRENTE, F.FATURA,
  
 CASE
        WHEN F.TIPO ='P' THEN 'CONTAS A PAGAR'
        WHEN F.TIPO ='R' THEN 'CONTAS A RECEBER' END AS TIPO,
   F.OBSPARCELA
        
FROM FLXCAIXA F 

WHERE
    F.status IS not null
AND (F.VALOR_PAGO - F.VALOR) <> 0
    AND F.DATA_VENC = CURRENT_DATE

ORDER BY F.DATA_VENC ASC